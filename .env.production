# Production Environment Configuration
NODE_ENV=production
BUILD_TARGET=production

# Server Configuration
PORT=8080
BACKEND_PORT=8080
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Database Configuration (Production)
POSTGRES_DB=${POSTGRES_DB}
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_PORT=5432
DATABASE_URL=${DATABASE_URL}

# Authentication (Production - Must be set via environment)
JWT_SECRET=${JWT_SECRET}

# Strava OAuth Configuration (Production)
STRAVA_CLIENT_ID=${STRAVA_CLIENT_ID}
STRAVA_CLIENT_SECRET=${STRAVA_CLIENT_SECRET}
STRAVA_REDIRECT_URL=${STRAVA_REDIRECT_URL}

# OpenAI Configuration (Production)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Frontend Configuration (Production)
FRONTEND_URL=${FRONTEND_URL}
VITE_API_URL=${VITE_API_URL}

# Logging (Less verbose for production)
LOG_LEVEL=warn

# Production Settings
ENABLE_PROFILING=false
ENABLE_METRICS=true
WATCH_FILES=false