# Environment
NODE_ENV=development
BUILD_TARGET=development

# Server Configuration
PORT=8080
BACKEND_PORT=8080
FRONTEND_PORT=5173
NGINX_PORT=80
NGINX_SSL_PORT=443

# Database Configuration
POSTGRES_DB=bodda
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
DATABASE_URL=postgres://postgres:password@localhost:5432/bodda?sslmode=disable

# Authentication
JWT_SECRET=your-jwt-secret-key-here-make-it-long-and-random

# Strava OAuth Configuration
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret
STRAVA_REDIRECT_URL=http://localhost:8080/auth/callback

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# OpenAI Responses API Migration - Default to Responses API
USE_RESPONSES_API=true

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:8080

# Logging
LOG_LEVEL=info

# Development Tools
ENABLE_PROFILING=false
ENABLE_METRICS=false

# Stream Processing Configuration
STREAM_MAX_CONTEXT_TOKENS=15000
STREAM_TOKEN_PER_CHAR_RATIO=0.25
STREAM_DEFAULT_PAGE_SIZE=1000
STREAM_MAX_PAGE_SIZE=5000
STREAM_REDACTION_ENABLED=true
STREAM_STRAVA_RESOLUTIONS=low,medium,high

# Stream Processing Feature Flags
STREAM_ENABLE_DERIVED_FEATURES=true
STREAM_ENABLE_AI_SUMMARY=true
STREAM_ENABLE_PAGINATION=true
STREAM_ENABLE_AUTO_MODE=true

# Stream Processing Thresholds
STREAM_LARGE_DATASET_THRESHOLD=10000
STREAM_CONTEXT_SAFETY_MARGIN=2000
STREAM_MAX_RETRIES=3
STREAM_PROCESSING_TIMEOUT=30

# Development Mode (required for tool execution endpoint)
DEVELOPMENT_MODE=true

# Tool Execution Configuration
TOOL_EXECUTION_TIMEOUT=30
TOOL_MAX_TIMEOUT=300
TOOL_EXECUTION_RATE_LIMIT_PER_MINUTE=60
TOOL_EXECUTION_MAX_CONCURRENT_EXECUTIONS=5

# Tool Execution Caching
TOOL_EXECUTION_ENABLE_CACHING=false
TOOL_EXECUTION_CACHE_TTL=300

# Tool Execution Logging
TOOL_EXECUTION_ENABLE_DETAILED_LOGGING=true

# Tool Execution Performance Thresholds
TOOL_EXECUTION_PERFORMANCE_ALERT_THRESHOLD_MS=5000
TOOL_EXECUTION_MAX_CPU_USAGE_PERCENT=80.0
TOOL_EXECUTION_MAX_MEMORY_USAGE_MB=512
TOOL_EXECUTION_MAX_QUEUE_DEPTH=10